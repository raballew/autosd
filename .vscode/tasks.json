{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "automotive-image-builder build --distro ${input:distro} --mode ${input:mode} --target ${input:target} --export ${input:export} ${input:manifest} $(dirname ${input:manifest})/$(basename ${input:manifest}).${input:distro}-${input:mode}-${input:target}.$(arch).${input:export}",
            "problemMatcher": [],
            "group": "build",
            "label": "Image Builder",
            "icon": {
                "id": "tools"
            }
        },
        {
            "type": "shell",
            "command": "./.vscode/scripts/jumpstarter.sh ${input:image} 127.0.0.1 2222 root",
            "problemMatcher": [],
            "group": "none",
            "label": "Jumpstarter",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "icon": {
                "id": "plug"
            }
        },
        {
            "type": "shell",
            "command": "meson install -C ${workspaceFolder}/src/${config:mesonbuild.buildFolder}",
            "problemMatcher": [],
            "group": "none",
            "label": "Pre-Launch Task ASIL",
            "options": {
                "env": {
                    "DESTDIR": "/mnt/target"
                }
            },
            "dependsOn": [
                "Build Targets"
            ],
            "dependsOrder": "sequence",
            "hide": true,
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "type": "shell",
            "command": "meson install -C ${workspaceFolder}/src/${config:mesonbuild.buildFolder}",
            "problemMatcher": [],
            "group": "none",
            "label": "Pre-Launch Task QM",
            "options": {
                "env": {
                    "DESTDIR": "/mnt/target/usr/lib/qm/rootfs/"
                }
            },
            "dependsOn": [
                "Build Targets"
            ],
            "dependsOrder": "sequence",
            "hide": true,
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "type": "shell",
            "command": "meson compile -C ${workspaceFolder}/src/${config:mesonbuild.buildFolder}",
            "problemMatcher": [],
            "group": "build",
            "label": "Build Targets",
            "hide": true,
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
    ],
    "inputs": [
        {
            "id": "distro",
            "description": "",
            "type": "pickString",
            "default": "cs9",
            "options": [
                "cs9",
                "autosd"
            ]
        },
        {
            "id": "mode",
            "description": "",
            "type": "pickString",
            "default": "package",
            "options": [
                "package",
                "image"
            ]
        },
        {
            "id": "target",
            "description": "",
            "type": "pickString",
            "default": "qemu",
            "options": [
                "qemu"
            ]
        },
        {
            "id": "export",
            "description": "",
            "type": "pickString",
            "default": "qcow2",
            "options": [
                "qcow2"
            ]
        },
        {
            "id": "manifest",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile",
            "args": {
                "include": "**/*.aib.{yml,yaml}"
            }
        },
        {
            "id": "image",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile",
            "args": {
                "include": "**/*.{qcow2}"
            }
        }
    ]
}
