{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build OS",
			"type": "shell",
			"command": "automotive-image-builder build --distro ${input:distro} --mode ${input:mode} --target ${input:target} --export ${input:export} ${input:manifest} $(dirname ${input:manifest})/$(basename ${input:manifest}).${input:distro}-${input:mode}-${input:target}.$(arch).${input:export}",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			  }
		}
	],
	"inputs": [
		{
			"id": "distro",
			"description": "",
			"type": "pickString",
			"default": "cs9",
			"options": [
				"cs9",
				"autosd"
			]
		},
		{
			"id": "mode",
			"description": "",
			"type": "pickString",
			"default": "package",
			"options": [
				"package",
				"image"
			]
		},
		{
			"id": "target",
			"description": "",
			"type": "pickString",
			"default": "qemu",
			"options": [
				"qemu"
			]
		},
		{
			"id": "export",
			"description": "",
			"type": "pickString",
			"default": "qcow2",
			"options": [
				"qcow2"
			]
		},
		{
			"id": "manifest",
			"type": "command",
			"command": "extension.commandvariable.file.pickFile",
			"args": {
			  "include": "**/*.aib.{yml,yaml}"
			}
		}
	]
}
