{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "automotive-image-builder build --distro ${input:distro} --mode ${input:mode} --target ${input:target} --export ${input:export} ${input:manifest} $(dirname ${input:manifest})/$(basename ${input:manifest}).${input:distro}-${input:mode}-${input:target}.$(arch).${input:export}",
            "problemMatcher": [],
            "group": "build",
            "label": "OS: Build"
        },
        {
            "type": "shell",
            "command": "automotive-image-runner --nographics ${input:image}",
            "problemMatcher": [],
            "group": "none",
            "label": "OS: Run",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "type": "shell",
            "command": "rm -rf ~/.ssh/known_hosts && ssh-keyscan -p 2222 127.0.0.1  >> ~/.ssh/known_hosts && if mountpoint -q /mnt/target; then umount /mnt/target; fi && if test -d /mnt/target; then rm -rf /mnt/target && mkdir -p /mnt/target; fi",
            "problemMatcher": [],
            "group": "none",
            "label": "OS: Setup",
        }
    ],
    "inputs": [
        {
            "id": "distro",
            "description": "",
            "type": "pickString",
            "default": "cs9",
            "options": [
                "cs9",
                "autosd"
            ]
        },
        {
            "id": "mode",
            "description": "",
            "type": "pickString",
            "default": "package",
            "options": [
                "package",
                "image"
            ]
        },
        {
            "id": "target",
            "description": "",
            "type": "pickString",
            "default": "qemu",
            "options": [
                "qemu"
            ]
        },
        {
            "id": "export",
            "description": "",
            "type": "pickString",
            "default": "qcow2",
            "options": [
                "qcow2"
            ]
        },
        {
            "id": "manifest",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile",
            "args": {
                "include": "**/*.aib.{yml,yaml}"
            }
        },
        {
            "id": "image",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile",
            "args": {
                "include": "**/*.{qcow2}"
            }
        }
    ]
}
