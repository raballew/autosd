{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/${fileBasenameNoExtension}",
            "postRemoteConnectCommands": [
                {
                    "description": "Set remote executable for gdb",
                    "text": "set remote exec-file ${fileBasenameNoExtension}",
                    "ignoreFailures": false
                }
            ],
            "MIMode": "gdb",
            "miDebuggerServerAddress": "${input:target}",
            "miDebuggerPath": "gdb",
            "useExtendedRemote": true,
            "cwd": "${fileDirname}/build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
            ],
            "preLaunchTask": "Meson: Build all targets",
        },
    ],
    "inputs": [
        {
            "id": "target",
            "type": "command",
            "command": "extension.commandvariable.pickStringRemember",
            "args": {
                "description": "Select Target:",
                "key": "target",
                "options": [
                    {
                        "label": "VM ASIL",
                        "value": "127.0.0.1:2345"
                    },
                    {
                        "label": "VM QM",
                        "value": "127.0.0.1:3456"
                    },
                ]
            }
        }
    ]
}
